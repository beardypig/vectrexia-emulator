{
    "version": 2,
    "configurePresets": [
        {
            "name": "vcpkg-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_FEATURE_FLAGS": "manifests"
            }
        },
        {
            "name": "base-debug",
            "hidden": true,
            "inherits": "vcpkg-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "23"
            }
        },
        {
            "name": "base-release",
            "hidden": true,
            "inherits": "vcpkg-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "23"
            }
        },
        {
            "name": "visualstudio-vcpkg",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "inherits": "vcpkg-base"
        },
        {
            "name": "ninja-vcpkg",
            "hidden": true,
            "generator": "Ninja",
            "inherits": "vcpkg-base"
        },
        {
            "name": "macos-ninja-vcpkg",
            "inherits": "ninja-vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "14.0"
            }
        },
        {
            "name": "macos-arm64-base",
            "inherits": "macos-ninja-vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "VCPKG_TARGET_TRIPLET": "arm64-osx"
            }
        },
        {
            "name": "macos-x64-base",
            "inherits": "macos-ninja-vcpkg",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "x86_64"
            }
        },
        {
            "name": "macos-arm64-debug",
            "inherits": ["macos-arm64-base", "base-debug"]
        },
        {
            "name": "macos-arm64-release",
            "inherits": ["macos-arm64-base", "base-release"]
        },
        {
            "name": "macos-x64-debug",
            "inherits": ["macos-x64-base", "base-debug"]
        },
        {
            "name": "macos-x64-release",
            "inherits": ["macos-x64-base", "base-release"]
        },
        {
            "name": "msvc-x64-debug",
            "inherits": ["visualstudio-vcpkg", "base-debug"],
            "binaryDir": "${sourceDir}/build/x64-Debug",
            "cacheVariables": {
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_CXX_FLAGS": "/DDEBUG /W3 /MDd /EHsc",
                "CMAKE_C_FLAGS": "/DDEBUG /W3 /MDd /EHsc"
            }
        },
        {
            "name": "msvc-x64-release",
            "inherits": ["visualstudio-vcpkg", "base-release"],
            "binaryDir": "${sourceDir}/build/x64-Release",
            "cacheVariables": {
                "CMAKE_GENERATOR_PLATFORM": "x64",
                "CMAKE_CXX_FLAGS": "/O2 /MD /EHsc",
                "CMAKE_C_FLAGS": "/O2 /MD /EHsc"
            }
        },
        {
            "name": "nix-x64-debug",
            "inherits": ["ninja-vcpkg", "base-debug"],
            "binaryDir": "${sourceDir}/build/nix-x64-debug"
        },
        {
            "name": "nix-x64-release",
            "inherits": ["ninja-vcpkg", "base-release"],
            "binaryDir": "${sourceDir}/build/nix-x64-release"
        }
    ],
    "buildPresets": [
        {
            "name": "macos-arm64-debug",
            "configurePreset": "macos-arm64-debug",
            "description": "Build for macOS ARM64 Debug",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "macos-arm64-release",
            "configurePreset": "macos-arm64-release",
            "description": "Build for macOS ARM64 Release",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "macos-x64-debug",
            "configurePreset": "macos-x64-debug",
            "description": "Build for macOS x64 Debug",
            "verbose": true
        },
        {
            "name": "macos-x64-release",
            "configurePreset": "macos-x64-release",
            "description": "Build for macOS x64 Release",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "msvc-x64-debug",
            "configurePreset": "msvc-x64-debug",
            "description": "Build for Windows x64 Debug",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "msvc-x64-release",
            "configurePreset": "msvc-x64-release",
            "description": "Build for Windows x64 Release",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "nix-x64-debug",
            "configurePreset": "nix-x64-debug",
            "description": "Build for *nix x64 Debug",
            "jobs": 4,
            "verbose": true
        },
        {
            "name": "nix-x64-release",
            "configurePreset": "nix-x64-release",
            "description": "Build for *nix x64 Release",
            "verbose": true
        }
    ],
    "testPresets": [
        {
            "name": "msvc-x64-test",
            "configurePreset": "msvc-x64-debug",
            "description": "Run tests for Windows x64 Debug",
            "displayName": "Tests (Windows)"
        },
        {
            "name": "macos-arm64-test",
            "configurePreset": "macos-arm64-debug",
            "description": "Run tests for macOS ARM64 Debug",
            "displayName": "Tests (macOS ARM64)"
        },
        {
            "name": "macos-x64-test",
            "configurePreset": "macos-x64-debug",
            "description": "Run tests for macOS x64 Debug",
            "displayName": "Tests (macOS x64)"
        },
        {
            "name": "nix-x64-test",
            "configurePreset": "nix-x64-debug",
            "description": "Run tests for *nix x64 Debug",
            "displayName": "Tests (*nix)"
        }
    ]
}
